{
  "baseUrl": ".",
  "compilerOptions": {
    "allowJs": false,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "esnext",
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true
  },
  "include": ["./src/**/*.d.ts", "./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": [
    "node_modules/",
    "**/node_modules/",
    "scripts/",
    "build/",
    "dist/",
    "docs/",
    "scripts/",
    "build/",
    "dist/"
  ]
}
